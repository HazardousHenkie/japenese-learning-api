{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "baseUrl": "src",
        "paths": { "base/*": ["./*"] },
        "noEmit": true,
        "moduleResolution": "node",
        "pretty": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": ["./node_modules/*"]
}
